pipeline{
	agent any
	stages{
	  	stage("Start Grid"){
	  		steps{
	  			bat "docker-compose up -d hub chrome firefox"
	  		}
		}
		stage("Run Tests"){
	  		steps{
	  			bat "docker-compose up search-module book-flight"
	  		}
		}
	}
	post{
		always{
			archiveArtifacts artifacts: 'docker-test-output/**'
			bat "docker-compose down"
		}
	}		
}